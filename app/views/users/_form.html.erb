
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
  </div>
  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, :order => [:day, :month, :year], :start_year => 1950, :end_year => 2000 %><br><br>
  </div>
  <div class="field">
    <%= f.label :accepts_email %>
    <%= f.check_box :accepts_email %><br><br>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', :class => "btn btn-primary"  %><br><br>
  </div>
<% end %>
